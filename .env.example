# VoidGuard AI Governance Suite - Environment Configuration
# Copy to .env and configure for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
APP_NAME="VoidGuard AI Governance Suite"
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:3000/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Primary Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voidguard_governance
DB_USER=voidguard_user
DB_PASSWORD=secure_password_here
DB_SSL=false

# Redis Cache & Session Store
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=12

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Claude API (for AI processing)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# OpenAI API (backup/alternative)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# =============================================================================
# ORACLE STRATEGIC INTELLIGENCE
# =============================================================================
ORACLE_ENDPOINT=https://valuevoidoracle.com/api/oracle
ORACLE_ANALYSIS_TIMEOUT=30000
ORACLE_MAX_CONCURRENT=10

# =============================================================================
# VOIDGUARD SAFETY FRAMEWORK
# =============================================================================
VOIDGUARD_COMPLIANCE_THRESHOLD=0.95
VOIDGUARD_AUDIT_ENABLED=true
VOIDGUARD_TRANSPARENCY_LEVEL=full

# =============================================================================
# ALO CORPORATE SUITE (Voice Assistant)
# =============================================================================
# Speech Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

# Email Integration
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/auth/gmail/callback

# Microsoft Graph (for Outlook)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# ALGORITHM TRANSPARENCY ENGINE
# =============================================================================
TRANSPARENCY_AUDIT_INTERVAL=24
TRANSPARENCY_REPORT_RETENTION=90
ALGORITHM_MICROSCOPE_ENABLED=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/voidguard.log

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================
# Multi-tenancy
MULTI_TENANT_ENABLED=true
DEFAULT_TENANT=silverbullet

# SSO Configuration
SAML_ENABLED=false
SAML_ENTRY_POINT=
SAML_ISSUER=

# LDAP Configuration
LDAP_ENABLED=false
LDAP_URL=
LDAP_BIND_DN=
LDAP_BIND_PASSWORD=

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
DEBUG_MODE=true

# Testing
TEST_DB_NAME=voidguard_test
MOCK_EXTERNAL_APIS=false

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================
# Docker
DOCKER_REGISTRY=registry.voidguard.ai
DOCKER_IMAGE=voidguard/governance-suite

# Kubernetes
K8S_NAMESPACE=voidguard-production
K8S_REPLICAS=3

# CDN & Assets
CDN_BASE_URL=https://cdn.voidguard.ai
ASSETS_BASE_URL=https://assets.voidguard.ai